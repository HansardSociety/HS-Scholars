/* Box model
========================================================================== */

/* Margins */
.u-MarginTop
.u-marginTop
  margin-top 1em
.u-marginTopX2
  margin-top 2em
.u-MarginAuto
  margin 0 auto
.u-MarginBottomFlow
  margin-bottom 1.125em
  
/* Borders */
.u-BorderRadius2px
  border-radius 2px
  
/* Overflow */
.u-OverflowHidden
  overflow hidden

/* Flexbox
========================================================================== */

.u-FlexRowWrap
.u-FlexRowNowrap
.u-FlexColumn
  display flex
.u-FlexRowWrap
  flex-flow row wrap
.u-FlexRowNowrap
  flex-flow row nowrap
.u-FlexColumn
  flex-flow column

/* Containers
========================================================================== */

.u-container
.u-Container
.u-Panel  
  position relative
  
  padding 3rem 1rem
  +above( md )
    padding 4rem 1rem
    
  background-color canvas
  
  &--brand
    background-color brand
    color canvas

  &-content
    @extend .u-MarginAuto

    &--wide
      max-width 75rem
    &--narrow
      max-width 45rem
  
/* Positioning
========================================================================== */

/* Centre hack */
.u-CenterY
.u-CenterX
.u-CenterXY
  position absolute  
.u-CenterY
  top 50%
  transform translateY( -50% )
.u-CenterX
  left 50%
  transform translateX( -50% )
.u-CenterXY
  top 50%
  left 50%
  transform translate( -50%,-50% )

/* Absolute */  
.u-PosAbsTL
.u-PosAbsBL
.u-PosAbsBR
  position absolute
.u-PosAbsBL
.u-PosAbsTL
  left 0
.u-PosAbsBR
  right 0
.u-PosAbsBL
.u-PosAbsBR
  bottom 0
.u-PosAbsTL
  top 0
  
/* Relative */
.u-PosRel
  position relative