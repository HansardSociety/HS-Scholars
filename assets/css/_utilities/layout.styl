/* Box model
========================================================================== */

/* Margins */
.l-MarginTop
.l-marginTop
  margin-top 1em
.l-MarginTopX2
.l-marginTopX2
  margin-top 2em
.l-MarginAuto
  margin 0 auto
.l-MarginBottomFlow
  margin-bottom 1.125em
  
/* Borders */
.l-BorderRadius2px
  border-radius 2px
  
/* Overflow */
.l-OverflowHidden
  overflow hidden

/* Flexbox
========================================================================== */

.l-FlexRowWrap
.l-FlexRowNowrap
.l-FlexColumn
  display flex
.l-FlexRowWrap
  flex-flow row wrap
.l-FlexRowNowrap
  flex-flow row nowrap
.l-FlexColumn
  flex-flow column

/* Containers
========================================================================== */

.l-container
.l-Container
.l-Panel  
  position relative
  
  padding 3rem 1rem
  +above( md )
    padding 4rem 1rem
    
  background-color canvas
  
  &--brand
    background-color brand
    color canvas

  &-content
    @extend .l-MarginAuto

    &--wide
      max-width 75rem
    &--narrow
      max-width 45rem
  
/* Positioning
========================================================================== */

/* Centre hack */
.l-CenterY
.l-CenterX
.l-CenterXY
  position absolute  
.l-CenterY
  top 50%
  transform translateY( -50% )
.l-CenterX
  left 50%
  transform translateX( -50% )
.l-CenterXY
  top 50%
  left 50%
  transform translate( -50%,-50% )

/* Absolute */  
.l-PosAbsTL
.l-PosAbsBL
.l-PosAbsBR
  position absolute
.l-PosAbsBL
.l-PosAbsTL
  left 0
.l-PosAbsBR
  right 0
.l-PosAbsBL
.l-PosAbsBR
  bottom 0
.l-PosAbsTL
  top 0
  
/* Relative */
.l-PosRel
  position relative