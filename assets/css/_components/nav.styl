/* Shared
========================================================================== */

.Nav
.Nav-offCanvas
  position fixed
  top 0


/* Main
========================================================================== */

.Nav
  
  left 0

  width 100%
  height 4rem

  z-index 100
  
  transition ease all .2s
  
  /* Is scrolled */
  
  &.is-scrolled
    background-color brand
    
    box-shadow shadow-brand
    
    .Nav-logoImg
      +above( md )
        position relative
        height 2.5rem
        top 0

  /* Logo */
    
  &-logo
    @extend .l-CenterY
    
    left 1rem
    +above( md )
      left 2rem
    
    height 2.5rem
    
    &Img
      height 100%
      
      transition ease all .2s
      
      +above( md )
        position absolute
        height 4rem
        top 1rem
      +below( lg, orientation: landscape )
        height 2.5rem
        top 0

  /* Hamburger */
    
  &-hb
    @extend .l-CenterY

    right 1rem
    +above( md )
      right 2rem
    
    width 26px
    height 20px

    cursor pointer
    
    z-index 102
    
    &Text
      @extend .l-CenterY
      
      right 2.25rem
      text-transform uppercase
      color canvas

    > span
      bottom 50%

    > span
    > span::before
    > span::after
      position absolute
      content ""

      display block

      height 2px
      width 100%
      
      background-color canvas
      border-radius 1px
      
      transition all .1s ease-in-out
    
    > span::before
      top -.5rem
    > span::after
      bottom -.5rem
      
    &.is-active

      > span
        background-color transparent
          
        &::before
        &::after
          top 0

        &::before
          transform rotate( 45deg )
        &::after
          transform rotate( -45deg )
          
  /* Off canvas */

  &-offCanvas
    right 0
    bottom 0

    width 20rem

    padding-top 4rem

    transform translateX( 100% )
    transition .3s ease all

    color canvas
    background-color copy
    box-shadow 0 1px 4px 0 rgba( 0,0,0,.37 )

    z-index 101
    overflow-y scroll

    &.is-active
      transform translateX(0)
    
    a
      color inherit
    
    &-inner
      min-height 125%
      
    &Menu
      > li
        border-bottom 1px solid rgba( #FFF,.2 )
        
        &:first-child
          border-top 1px solid rgba( #FFF,.2 )
      
      &Cat
        @extend .l-FlexRowNowrap

        &.is-closed
          
          & + .Nav-offCanvasMenuSubCats
            @extend .l-Offscreen
            
          & > .Nav-offCanvasMenuCatToggle
            &::after
              @extend .ion-md-arrow-dropright:before
        
        > a
        &Toggle
          padding .5rem 1rem

        > a
          width 85%
          font-size font-md
          text-decoration underline

        &Toggle
          position relative
          width 15%
          border-left 1px solid rgba( #FFF,.2 )
          
          &::after
            @extend .ion-md-arrow-dropup:before
            @extend .l-CenterXY
            
            font-size font-md
            
      &SubCats
        border-top 1px solid rgba( #FFF,.2 )
        
        &Link
          display block
          padding .25rem 1rem
          text-decoration underline

          &:first-child
            padding-top .5rem
          &:last-child
            padding-bottom .5rem
          

