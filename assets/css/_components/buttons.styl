.Btn
  @extend .l-FlexRowNowrap
  
  align-items center
  
  border-radius .2em
  
  text-decoration none
  text-transform uppercase
  
  font-family font-body
  
  height inherit
  
  cursor pointer
  
  /* Button reset */
  border none
  padding 0
  margin 0
  
  &:focus
    outline 0

  &--primary
    background-image linear-gradient( to top, accent, lighten( accent,3% ) )
    
    > .Btn-action
    > .Btn-text
      color canvas

    > .Btn-action
      border-right 1px solid rgba( canvas,.33 )
      
  &--secondary
    background-image none
    border 2px solid accent
    
    > .Btn-action
    > .Btn-text
      color accent

    > .Btn-action
      border-right 1px solid accent
      
  /* Small */
  &--sm
    min-width 8rem
    
    > .Btn-action
      font-size 1rem
    > .Btn-text
      font-size .75rem

    > .Btn-action
    > .Btn-text
      padding .25rem .5rem
      
  /* Medium */
  &--md
    min-width 10rem
    
    > .Btn-action
      font-size 1rem
    > .Btn-text
      font-size .75rem

    > .Btn-action
    > .Btn-text
      padding .5rem 1rem
        
  /* Large */
  &--lg
    min-width 12rem
    
    > .Btn-action
      font-size 1.5rem
    > .Btn-text
      font-size 1rem

    > .Btn-action
    > .Btn-text
      padding 1rem
  
  &-action
  &-text
    color canvas
    text-align center

  &-action
    flex 1
    line-height 1
    
    /* Background transition */
    transition opacity .4s ease
    
    /* Icon transition */
    &::before
      transition all .2s linear


  &-text
    flex 5
    font-weight 700
    
    /* Ensures button on one line */
    white-space nowrap


      

/* Button actions and states
========================================================================== */

.Btn
  
  /* Actions */
  &-action
    
    /* Apply */  
    &--apply::before
      @extend .ion-compose:before
    
    /* Show more */
    &--showMore::before
      @extend .ion-plus-round:before

  &--secondary.is-on
    > .Btn-action
      background-color rgba( accent,.2 )

  /* State animations */
  &.is-on
    > .Btn-action
      
      /**
       * Define the 'is-on' states for 
       * each button action here.
       */
         
      /* Show more */        
      &--showMore
        &::before
          transform rotate( 225deg )

