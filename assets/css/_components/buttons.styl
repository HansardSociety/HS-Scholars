.Btn
  @extend .u-flexRowNowrap

  align-items center
  background-image linear-gradient( to top, accent, lighten( accent, 3% ) )
  overflow hidden
  border-radius .2em
  font-size .675rem
  
  +above( md )
    font-size .66rem
  
  line-height 1
  text-decoration none
  flex 1
  
  min-width 6.5rem
  max-width 8rem
  max-height 2rem

  color brand
  text-transform uppercase
        
  &-icon
  &-text
    color canvas

  &-icon
    flex 1
    padding .5rem .75rem
    height 100%
    margin 0
    line-height 1.5
    position relative
    
    &::before
      position absolute
      top 50%
      left 50%
      transform translate( -50%,-50% )
    
  &-text
    flex 5
    padding .5rem
    font-weight 900
    line-height 1.5
    text-align center
    margin-left -1px
    border-left 1px solid rgba( canvas, .33 )

    
  &:nth-last-of-type( 1n+2 )
    margin-right 1em
    

  &--secondary
    background-image none
    border 2px solid accent
    
    > .Btn-icon
    > .Btn-text
      color accent

    > .Btn-text
      border-left 1px solid accent

