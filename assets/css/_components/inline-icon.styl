.InlineIcon
  position relative
  display inline-block
  
  padding-right .5em
  

  &--calendar::before
    @extend .ion-calendar:before
    
  /**
   * Class name ripped from Ionicons.
   * This is because content editors refer to the Ionicons cheatsheet,
   * pasting class names in the respective content field.
   */
  &--ion-arrow-graph-up-right::before
    @extend .ion-arrow-graph-up-right:before
  &--ion-chatbubbles::before
    @extend .ion-chatbubbles:before
  &--ion-speakerphone::before
    @extend .ion-speakerphone:before
  &--ion-android-bulb::before
    @extend .ion-android-bulb:before
    
    
    