.Post
  @extend .l-Container
  
  &-content
    @extend .l-Container-content
    @extend .l-Container-content--wide

    display flex
    flex-flow row wrap
    justify-content space-around
    
    &Body
    &Aside
    &Footer
      flex 0 0 100%
  
    &Body
    &Aside
      margin-bottom 2rem
      
    &Aside
    &Footer
      +above( xl )
        flex 1


    /* Aside */
    &Aside
      max-width 38rem

      +above( xl )
        order 1
        
    /* Footer */
    &Footer
      max-width 38rem

      +above( xl )
        order 3
        
      &Title
        @extend .l-MarginBottomFlow
        
        color brand
    
    /* Content */
    &Body
      max-width 38rem
      
      +above( xl )
        order 2    
        flex 5

        padding 0 2rem
      
      /* Typography */
      > p
      > h1
      > h2
      > h3
      > h4
      > h5
      > h6
      > blockquote
        &:not( :last-child )
          margin-bottom 1.125em
        
      > h1
      > h2
      > h3
      > h4
      > h5
      > h6
      > blockquote
        margin-top 1.125em
        
      > p:first-child
        font-size font-sm
        +above( md )
          font-size font-md
   
      > h2
        font-size font-md
      > h3
        font-size font-sm
      > h4
        font-size font-base
        
      > blockquote
        font-size font-lg
        font-family font-display
        text-align center
        font-weight 700
        color default
        
        &::before
          @extend .ion-quote:before
          
          color accent
          padding-right 1rem

        +above( md )
          font-size font-xl