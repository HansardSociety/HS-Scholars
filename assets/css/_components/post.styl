.Post
  @extend .u-Container
  
  &-content
    @extend .u-Container-content
    @extend .u-Container-content--wide

    display flex
    flex-flow row wrap
    justify-content space-around
    
    &Body
    &Aside
      margin-bottom 1rem

    /* Aside */
    &Aside
      max-width 18rem

      +above( md )
        order 1
        
    /* Footer */
    &Footer
      max-width 18rem

      +above( md )
        order 3
    
    /* Content */
    &Body
      max-width 38rem
      padding 0 2rem
      
      +above( md )
        order 2    
      
      /* Typography */
      > p
      > h1
      > h2
      > h3
      > h4
      > h5
      > h6
      > blockquote
        margin-bottom 1.125em
        
      > h1
      > h2
      > h3
      > h4
      > h5
      > h6
      > blockquote
        margin-top 1.125em
        
      > p:first-child
        font-size font-sm
        +above( md )
          font-size font-md
   
      > h2
        font-size font-md
      > h3
        font-size font-sm
      > h4
        font-size font-base
        
      > blockquote
        font-size font-lg
        font-family font-display
        text-align center
        font-weight 700
        color default
        
        &::before
          @extend .ion-quote:before
          
          color accent
          padding-right 1rem

        +above( md )
          font-size font-xl