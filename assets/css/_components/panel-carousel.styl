.Carousel
.PanelCarousel
  @extend .u-Container
  
  padding-left 0
  padding-right 0
  
  background-color contrast
  
  &-carousel
    @extend .u-Container-content
    
    position relative

    &Item
      width 100%
      max-width 26rem
      
      padding 1rem
      
      height 100%

      +above( md )
        padding 1rem

    /* Slick */
    &ArrowPrev
    &ArrowNext
      @extend .u-CenterX

      top -1rem
      
      &::before
        font-size font-xl
        color accent
    
    &ArrowPrev
      &::before
        @extend .ion-arrow-right-c:before
        margin-right -1.5rem
    &ArrowNext
      &::before
        @extend .ion-arrow-left-c:before
        margin-left -1.5rem
      
  .slick-track
    display flex 

    .slick-slide
      display flex
      height auto
