.Icon
  flex 1 0 16rem
  
  max-width 18.5rem
  padding 1rem
  
  &-img
    @extend .l-MarginAuto
    
    position relative

    width 7.5rem
    height 7.5rem
    
    padding 1rem
    
    background-color canvasOpaque
    border-radius 50%
    
    > Img
      @extend .l-CenterXY
      
      height 4rem
      
  &-text
    @extend .l-marginTop

    text-align center