/* Main
========================================================================== */

.Hero
  position relative
  
  width 100%
  height 100vh
  
  overflow hidden
  
  background-color copy
    
  /* Image */
  &-img
    > img
      top 0
      left 0

      min-height 100%
      
      opacity .6
        
  /* Strap */ 
  &-strap
    @extend .u-centerXY
    
    width calc( 100% - 2rem )
    max-width 26rem
    padding 2rem 1rem
    
    border-radius 2px
    
    +above( md )
      padding 3rem 2rem
    
    background-color copyOpaque
        
    &Content
      @extend .u-flexRowWrap
      justify-content center
      
      &Title
      &Byline
        text-align center
        color canvas
        
      &Byline
      &CTA
        margin-top 1rem
        
      &Title
        font-size font-lg

        +above( md )
          font-size font-xl
          
      &Byline
        font-size font-sm
     
        +above( md )
          font-size font-md
          
  &-arrow
    @extend .u-centerX
    
    bottom 1rem
    
    color accent
    font-size font-xl
      
    &::before
      @extend .ion-chevron-down:before


    
          
    
