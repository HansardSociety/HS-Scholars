/* Main
========================================================================== */

.Hero
  position relative
  
  width 100%
  height 100vh
  
  overflow hidden
  
  background-color copy
    
  /* Image */
  &-img
    > img
      top 0
      left 0

      min-height 100%
      
      opacity .3
        
  /* Strap */ 
  &-strap
    @extend .u-CenterXY
    
    width calc( 100% - 2rem )
    max-width 28rem
    // padding 2rem 1rem
    
    border-radius 2px

    // background-color copyOpaque
    
    +above( md )
      padding 3rem 2rem
    
    +below( md, orientation: landscape )
      max-width 100%
            
    &Content
      @extend .u-FlexRowWrap

      justify-content center

      text-align center
      color canvas

      &Byline
      &CTA
        margin-top 1rem
        
      &Title
        font-size font-md

        +above( md )
          font-size font-xl
          
      &Byline
        font-size font-sm
        font-weight 700
     
        // +above( md )
        //   font-size font-md
          
      &Meta
        margin-top 1.5rem
                
        &Author
          &::after
            content " | "
            padding 0 .5rem

        &Author
        &Date
          font-size font-xs
          text-transform uppercase
          opacity .5
          letter-spacing 0.125em
          
  &-arrow
    @extend .u-CenterX
    
    bottom 1rem
    
    color accent
    font-size font-xl
      
    &::before
      @extend .ion-chevron-down:before


    
          
    
