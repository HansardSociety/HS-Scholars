/* Main
========================================================================== */

.Hero
  position relative
  
  width 100%
  height 100vh
  
  overflow hidden
  
  background-color copy
    
  /* Image */
  &-img
    > img
      top 0
      left 0

      max-width 110%
      min-height 100%
      
      opacity .8
  
  /* Strap */ 
  &-strap
    @extend .u-centerXY
    
    width 50vh
    height 50vh
    max-width 22rem
    max-height 22rem

    padding 1rem
    
    background-color copyOpaque
    border-radius 50%
        
    &Title
    &Byline
      text-align center
      color canvas
      
    &Title
      font-size font-lg

      +above( md )
        font-size font-xl
     
    
