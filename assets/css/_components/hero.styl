.Hero
  position relative
  
  width 100%
  height 100vh
  
  overflow hidden
  
  /* Image */
  &-img
    &::after
      content ""
      display block
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color #000
      animation fadein 2s
      opacity .4
      
    > img
      /* Centre image */
      transform translateX( calc( 50vw + -50% ) )
      
      min-height 100%
              
  /* Strap */ 
  &-strap
    @extend .l-CenterXY
    
    width calc( 100% - 2rem )
    max-width 28rem
    
    border-radius 2px

    +above( md )
      padding 3rem 2rem
    
    +below( md, orientation: landscape )
      max-width 100%
            
    &Content
      @extend .l-FlexRowWrap

      justify-content center

      text-align center
      color canvas

      &Byline
      &CTA
        margin-top 1rem
        
      &Title
        font-size font-md

        +above( md )
          font-size font-xl
          
      &Byline
        font-size font-sm
        font-weight 700
          
      &Meta
        margin-top 1.5rem
                
        &Author
          &::after
            content " | "
            padding 0 .5rem

        &Author
        &Date
          font-size font-xs
          text-transform uppercase
          opacity .5
          letter-spacing 0.125em
          
  &-arrow
    @extend .l-CenterX
    
    bottom 1rem
    
    color accent
    font-size font-xl
      
    &::before
      @extend .ion-ios-arrow-down:before


    
          
    
