.Block
  position relative
  
  /**
   * Prevents additional scroll-bar
   * when .Block-expand.is-hidden is transitioning.
   */
  overflow hidden
  
  &:not( .Block--hero ) + .Block:not( .Block--hero )
    > .Block-header
      border-top 1px solid muted
  
  /**
   * Pull subsequent blocks up -0.75rem to negate the
   * margin-bottom of .Block-expand (see below) (and
   * border-top), used to create additional space for
   * box-shadow, and negate z-index.
   */
  & + .Block
    margin-top -.75rem
    
  &--hero
    min-height 100vh
    
    /**
     * Fixes hero image height jump on mobiles
     * when the address bar disappears on
     * a downward scroll.
     */
    transition all 9999s ease
    
    /**
     * Override default backround for hero images.
     */
    > .Block-header
      background-color transparent
    
  &-heroImg
    @extend .l-CenterX
    
    width 101vw
    height 101vh
    
    &::after
      content ""
      display block
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      
      +portrait()
        background-image linear-gradient(
                          to bottom, rgba( #000,.66 ) 50%, transparent
                         )
      +landscape()
        background-image linear-gradient(
                          to bottom, rgba( #000,.66 ), transparent
                         )

    > img    
      width 100%
      height auto

      @media ( min-aspect-ratio: 4/3 ),
             ( min-aspect-ratio: 3/2 ),
             ( min-aspect-ratio: 5/4 )
        
        height 100%
        width auto
      
  /* Header */
  &-header
    @extend .l-Container
    
    background-color canvas    

    /**
     * Ensures header background colour (see above)
     * doesn't cover .Block-expand box-shadow. 
     */    
    z-index 0
    
    &Content
      @extend .l-Container-content
      @extend .l-Container-content--moderate
      @extend .l-Row
      
      &--light
        color canvas
        > h2
          color canvas
      
      > h2
        @extend .t-Title
        @extend .l-MarginBottomFlow
        
        width 100%

      &Summary
        @extend .l-Row-main
        
        order 3
        
        +above( lg )
          order 2
        
        > p
          @extend .t-Byline
          
          margin-top 0
          font-weight 600
          
        &CTAs
          @extend .l-MarginTop
          
          &Toggle
            display inline-block
                    
      &Aside
        @extend .l-Row-aside

        order 2
        flex 1

        margin 0 0 2rem 0
        
        padding 1rem
        background-color contrast
        
        font-size font-xs
        color grey
        
        +above( lg )
          order 3
          
          margin 0
          padding 0 0 0 2rem
          border-left 1px solid muted
          background-color transparent
          
        > h3
          font-size font-sm
          margin-bottom .5em
          
        &CTA
          margin-top .5rem

        
  /* Expand */
  &-expand
    
    /**
     * Positioning seems to affect z-index (??)
     */
    @extend .l-PosRel

    background-color canvas

    opacity 1
    transition transform .3s ease, opacity .3s ease

    /* Ensures top and bottom shadow */
    box-shadow 0 0 20px rgba( 0,0,0,.2 ), 0 0 20px rgba( 0,0,0,.2 )
    
    /* Additional space for box-shadow */
    margin-bottom .7rem
    
    /**
     * Pulls expand up towards 'show more' button.
     * Relates to header's padding and size of triangle. 
     */
    margin-top -2rem
    
    z-index 1

    +above( md )
      margin-top -3rem
      
    &.is-hidden
      @extend .l-Offscreen
      
      position relative
      
      opacity 0
      
      transform translateY( 20rem )
      
    &Content
      @extend .l-PosRel
      
      &::before
        @extend .l-BorderRadius2px
        
        background-color canvas
        content ""
        position absolute
        left 1.5rem
        top -.9rem
        
        /* Square */
        width 2rem 
        height 2rem
        transform rotate( 135deg )
        box-shadow: -5px 5px 5px 0 rgba( 0,0,0,.125 );        
        z-index 2
        
        +above( md )
          left 2.5rem

        +above( xl )
          
          /**
           * Calculation ensures triangle is always
           * below 'Show more' button on larger screens.
           * "(100% - 65rem) / 2": deduct moderate content
           * width from viewport width (taken as a percentage,
           * as vw doesn't seem to play well) and divide by 2 to
           * account for content margins.
           * "+ .5rem": brings triangle under 'x' in
           * 'Show more' button.
           */
          left calc( ( ( 100% - 65rem ) / 2 ) + .5rem )
          
    &Footer
      @extend .l-Container
      
      padding-top 1rem
      padding-bottom 1rem

      border-top 1px solid muted

      +above( md )
        padding-top 2rem
        padding-bottom 2rem
            
      &Content
        @extend .l-Container-content
        @extend .l-Container-content--moderate