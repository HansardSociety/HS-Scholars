.Tooltip
  @extend .l-CenterX
  @extend .l-BorderRadius2px
  
  bottom calc( 100% + 1rem )
  
  padding .25rem .5rem

  background-color copyOpaque
  color canvas

  font-size font-xs

  &::after
    @extend .l-CenterX
    
    top 100%
    content ""
    display block

    width 0
    height 0
    border-style solid
    border-width .3333rem .3333rem 0 .3333rem
    border-color copyOpaque transparent transparent transparent
    
  