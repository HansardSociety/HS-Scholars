/* Shared
========================================================================== */

.Photo-img
.Photo-img > img
  max-width inherit
  max-height inherit
  // display block

/* Main
========================================================================== */

.Photo
  > figure
    @extend .l-FlexRowNowrap
    @extend .l-BorderRadius2px
    
    align-items center
    background-color copy
    overflow hidden
    position relative
         
    /**
     * Need to set explicit width and height values
     * so Slick carousel can calculate the size.
     * Width is used as a base when photo isn't used
     * in within a carousel.
     */
    width 100%
    height 100%
    max-width calc( 100vw - 2rem )
    max-height calc( 100vh - 8rem )
      
  &-caption
    position absolute
    top 0
    left 0

    width 100%

    padding .5rem
    border-top-left-radius 2px

    color canvas

    font-size font-xs
    
    overflow hidden
    
    transition all .5s ease
    
    transform translateY( calc(0) )
    z-index 0
    
    &::before
      content ""
      position absolute
      top 0
      left 0
      background-color rgba( #000,.75 )
      width 100%
      height 100%
      display block
      z-index -1
      transition all .5s ease
      

    &.is-hidden
      transform translateY( calc( -100% + 2.25rem ) )
      
      &::before
        width 7rem
    
    > p
      margin-bottom .5rem
    
    &Description
    &Meta
      display block
      max-width 30rem
    &Meta
      font-variant small-caps
      text-transform lowercase
