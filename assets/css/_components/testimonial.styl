/* Shared
========================================================================== */

.Testimonial-quoteText
.Testimonial-quoteFooterBiog
  padding 1rem

/* Main
========================================================================== */

.Testimonial
  @extend .l-MarginAuto
  @extend .l-BorderRadius2px
  @extend .l-OverflowHidden

  width 100%
  max-width 26rem

  box-shadow shadow-copy
    
  &-quote
    @extend .l-FlexRowWrap
    
    &Text
    &Footer
      flex 0 100%
    
    &Text
      order 2
      font-family font-display
      
      &::before
        @extend .ion-md-quote:before
        
        float left
        
        /* Flip on y-axis */
        transform scaleX( -1 )
        
        padding-left .75rem
        
        font-size 3rem
        color accent
    
    &Footer
      @extend .l-FlexRowWrap
      
      order 1
      
      &Photo
      &Biog
        flex 0 100%
        
      &Photo
        position relative
        
        &Caption
          position absolute
          bottom 0
          
          width 100%
          
          padding .5rem 1rem
          
          font-size .75rem

          background-color copyOpaque 
          color canvas
        
        > img
          width 100%
          display block
          
      &Biog
        background-color contrast

        font-size .75rem