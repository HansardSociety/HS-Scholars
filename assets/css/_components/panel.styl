.Panel
  @extend .u-Container    
  
  background-color canvas
  
  &--brand
    background-color brand
    color canvas
  
  /* Header */
  &-header
    margin-bottom 2rem
    
    &Title
    &Byline
      text-align center

    &Title
      font-size font-lg
      
      +above( md )
        font-size font-xl

  /* Shared */
  &-content
  &-carousel
    @extend .u-Container-content

  /* Content */
  &-content
    @extend .u-FlexRowWrap
    
    justify-content center
    
    /* Wide */
    &--wide
      @extend .u-Container-content--wide
    
    /* Narrow */
    &--narrow
      @extend .u-Container-content--narrow
      
  /* Carousel */
  &-carousel
    @extend .u-Container-content--wide
    
    margin-top 4rem
    
    &Item
      padding .5rem
      +above( md )
        padding 1rem
      
      height 100%

    /* Slick */
    &ArrowPrev
    &ArrowNext
      @extend .u-CenterX

      top -2rem
      cursor pointer
      
      &::before
        font-size font-xl
        color accent
    
    &ArrowPrev
      &::before
        @extend .ion-arrow-right-c:before
        margin-right -1.5rem
    &ArrowNext
      &::before
        @extend .ion-arrow-left-c:before
        margin-left -1.5rem
      
  .slick-track
    display flex 

    .slick-slide
      display flex
      height auto

