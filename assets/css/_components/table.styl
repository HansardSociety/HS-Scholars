/* Shared
========================================================================== */

.Table-contentHead
.Table-contentBody
  &Cell
    padding 1rem 2rem
        
/* Main
========================================================================== */

.Table
  max-width 100%
  overflow-x auto
    
  &-content
    border-spacing 0
    border-collapse collapse
    
    background-color contrast
    
    table-layout fixed

    &Column
      &:nth-of-type( 1n+2 )
        border-left 1px solid brand
    
    &Head
      > tr
        border-bottom 2px solid muted
        
    &Body
      &Cell
        width 20rem

      > tr
        &:nth-of-type( 1n+2 )
          border-top 1px solid muted