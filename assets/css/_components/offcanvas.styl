.OffCanvas-menuCat > a
.OffCanvas-menuCatToggle
.OffCanvas-menuSubCatsItem > a
  &:hover
    background-color lighten( copy,5% )
    
/* Main
========================================================================== */

/* Off canvas */

.OffCanvas
  position fixed
  top 0
  right 0
  bottom 0

  height 100vh
  width 20rem

  transform translateX( 100% )
  transition .3s ease all

  color canvas
  background-color copy
  box-shadow 0 1px 4px 0 rgba( 0,0,0,.37 )
  
  &::before
    content ""
    
    position fixed
    top 0
    right 0
    
    width 100%
    height 4rem
    
    display block
    
    background-color copy
  
  &-inner
    width 100%
    height 100%

    /* Height of navbar */
    margin-top 4rem
    
    z-index 101
    
    overflow-y scroll

  &.is-active
    transform translateX( 0 )
  
  /* Shared */
  &-cat > a
  &-cat > span
  &-item
    display block
    padding .5rem 1rem
    
  &-cat
  &-section
    border-top 2px solid rgba( #FFF,.1 )

  /* Category */
  &-cat
    @extend .l-FlexRowNowrap

    &.is-closed
      
      + ul
        @extend .l-Offscreen
        
      > span
        &::after
          @extend .ion-md-arrow-dropright:before
      
    > a
      width 85%
      
      font-size font-md
      font-weight 700
      text-decoration underline

    > span
      position relative
      
      width 15%
      
      border-left 1px solid rgba( #FFF,.1 )
      
      cursor pointer
      
      &::after
        @extend .ion-md-arrow-dropup:before
        @extend .l-CenterXY
        
        font-size font-md
          
  &-item
    border-top 1px solid rgba( #FFF,.1 )

    > a
      display block
      padding .5rem 1rem
      text-decoration underline
      
  &-section
    padding 1rem