mixin block( $fields )
  section.Block

    //-- Header --
    header.Block-header

      .Block-headerContent
        
        //-- Header text --
        section.Block-headerContentMain
          h2= $fields.title
          p= $fields.introText

        //--
          - Header aside:
          - Yield block for assets/ content specified
          - in Contentful - eg. quote, icon etc.
          --
        aside.Block-headerContentAside
          
          //-- Quote --
          if $fields.introAside.sys.contentType.sys.id === "alumni"
            
            +smQuote( $fields.introAside.fields )

        .Block-headerContentCTA

          //-- Button --
          button.Btn.Btn--md.Btn--secondary
            i.Btn-icon.Btn-icon--showMore
            span.Btn-text Read&nbsp;more

    //--
      - Expandable content:
      - Opened by button in header text above.
      --
    .Block-expand.is-hidden

      //-- Content --
      section.Block-expandContent
        block blockContent

      //-- Footer --
      footer.Block-expandFooter
