mixin icon( $fields, $priority, $group )
  .Icon( class= $priority != null ? "Icon--" + $priority : null,
         class= $group != null ? "Icon--" + $group : null )
    .Icon-img
      img( src= $fields.image.fields.file.url
           alt= $fields.image.fields.description )
    .Icon-text
      h3.Icon-textTitle= $fields.title
      p.Icon-textByline= $fields.byline